<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme -->
    <style name="Base.Theme.ProjectF.Night" parent="Base.Theme.ProjectF">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">@color/md_theme_primary_highContrast</item>
        <item name="colorPrimaryVariant">@color/md_theme_primary_highContrast</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary_highContrast</item>
        <item name="colorSecondary">@color/md_theme_secondary_highContrast</item>
        <item name="colorSecondaryVariant">@color/md_theme_secondary_highContrast</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary_highContrast</item>
        <item name="android:statusBarColor">@color/md_theme_primary_highContrast</item>
        <item name="android:navigationBarColor">@color/md_theme_primary_highContrast</item>
        <item name="android:windowBackground">@color/md_theme_background_highContrast</item>
    </style>

    <style name="Theme.ProjectF.Night" parent="Base.Theme.ProjectF.Night" />

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ProjectF</item>
    </style>
</resources>
